{
	"name": "open-window-tab-context",
	"displayName": "Open Window Tab Context",
	"description": "Add an \"Open in new window\" option to tab context menu in editor.",
	"version": "1.4.4",
	"icon": "icon/icon.png",
	"publisher": "takkaO",
	"license": "MIT",
	"engines": {
		"vscode": "^1.45.0"
	},
	"categories": [
		"Other"
	],
	"activationEvents": [
		"*"
	],
	"main": "./out/extension.js",
	"contributes": {
		"commands": [
			{
				"command": "open-window-tab-context.openFileInNewWindow",
				"title": "Open in new window"
			}
		],
		"menus": {
			"editor/title/context": [
				{
					"when": "resourceScheme =~ /^untitled$|^file$/ && config.owtc.displayPosition == 'Top'",
					"command": "open-window-tab-context.openFileInNewWindow",
					"group": "navigation"
				},
				{
					"when": "resourceScheme =~ /^untitled$|^file$/ && config.owtc.displayPosition == 'Bottom'",
					"command": "open-window-tab-context.openFileInNewWindow",
					"group": "command"
				}
			]
		},
		"configuration": [
			{
				"title": "Open Window Tab Context",
				"properties": {
					"owtc.command": {
						"type": "string",
						"scope": "application",
						"default": "code",
						"description": "Command to open new window."
					},
					"owtc.displayPosition": {
						"displayName": "Display Position",
						"type": "string",
						"scope": "application",
						"enum": ["Top", "Bottom"],
						"default": "Top",
						"description": "Specify the context display position."
					},
					"owtc.autoClose": {
						"displayName": "Auto Close",
						"type": "boolean",
						"scope": "application",
						"default": false,
						"description": "Automatically closes the tabs in the original window."
					}
				}
			}
		]
	},
	"repository": {
		"type": "git",
		"url": "https://github.com/takkaO/VSCode-OpenWindowTabContext.git"
	},
	"scripts": {
		"vscode:prepublish": "npm run compile",
		"compile": "tsc -p ./",
		"watch": "tsc -watch -p ./",
		"pretest": "npm run compile",
		"test": "node ./out/test/runTest.js"
	},
	"devDependencies": {
		"@types/glob": "^7.1.3",
		"@types/mocha": "^8.2.2",
		"@types/node": "^14.14.37",
		"@types/vscode": "^1.45.0",
		"glob": "^7.1.6",
		"mocha": "^8.3.2",
		"typescript": "^4.2.3",
		"tslint": "^6.1.3",
		"vscode-test": "^1.5.2"
	}
}
